#!/usr/bin/env sh

xhost +local:root > /dev/null 2>&1

complete -cf sudo

# Environment definitions.
if [ -r ~/.sh_vars ]; then
    . ~/.sh_vars
fi

# Function definitions.
if [ -r ~/.sh_func ]; then
    . ~/.sh_func
fi

# PATH definition
if [ -r ~/.sh_path ]; then
    . ~/.sh_path
fi

# Hook definitions
if [ -r ~/.sh_hooks ]; then
    . ~/.sh_hooks
fi

# Completion definitions
if [ -r ~/.sh_completion ]; then
    . ~/.sh_completion
fi

# Expand aliases on non-interactive shell too
shopt -s expand_aliases

# Alias definitions.
if [ -r ~/.sh_aliases ]; then
    . ~/.sh_aliases
fi

# Platform-aware definitions (WSL, CYGWIN,...).
for f in $(ls -1 ~/.sh_platform_* 2>/dev/null); do
    if [ -r $f ]; then
        . $f
    fi
done

# Custom definitions
if [ -r ~/.shrc.user ]; then
    . ~/.shrc.user
fi
