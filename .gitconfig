[core]
  editor = nvim
[credential]
	helper = manager-core
	helper = manager
	helper = osxkeychain
	helper = wincred
[merge]
  tool = nvim
[mergetool]
  prompt = true
[mergetool "nvim"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = nvim
;[url "git@github.com:"]
